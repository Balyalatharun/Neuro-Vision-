# MongoDB Database Connection
MONGO_URI=your_mongodb_uri_here

# JWT Secret for authentication
JWT_SECRET=your_jwt_secret_here

# API Base URL (for frontend to call backend)
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Google Gemini API Key (if using Gemini for chat/emotions)
NEXT_PUBLIC_GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Backend service URL (if deployed separately)
# NEXT_PUBLIC_BACKEND_URL=https://your-backend-service.com

# Node Environment
NODE_ENV=development
